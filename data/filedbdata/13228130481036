function showResult()
{
    var nok=0;
    var i,s;
 
for (i=0; i<answ.length;i++) 
{
  nok+=answ.charAt(i)=="1"?1:0;
  if (answ.charAt(i)=="0")
  {
    var answerBlock;
    answerBlock = "Ans";
    answerBlock += i + 1;
    document.getElementById(answerBlock).style.display = 'inline';
  }
}
if(nok<50) s="ОТЛИЧНО";
if(nok<40) s="ХОРОШО";
if(nok<20) s="УДОВЛЕТВОРИТЕЛЬНО";
if (nok<10) s="НЕУДОВЛЕТВОРИТЕЛЬНО";
    document.test.s1.
	value="Количество правильных ответов "+nok+". Ваша оценка  "+s+". Посмотрите на окно рядом с номером вопроса. Если ответ правильный, там (+). Если ответ ошибочен, там (-).";
 
with(document.test)
    {
	if (answ.charAt(0)=="1") {T1.value=" + "} else {T1.value=" - "};
